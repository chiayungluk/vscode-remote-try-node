{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "**/test/**",
      "**/docs/**"
    ],
    "verbose": true,
    "execMap": {
      "js": "node"
    },
    "watch": [
      "*.*"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json",
    "delay": 2500
  }